{
  "name": "@guardian/prosemirror-typerighter",
  "version": "2.1.1",
  "description": "A plugin to represent validation ranges in Prosemirror",
  "main": "dist/index.cjs.js",
  "module": "dist/index.es.js",
  "types": "dist/src/ts/index.d.ts",
  "license": "MIT",
  "author": {
    "name": "Jonathon Herbert",
    "email": "jonathon.herbert@guardian.co.uk"
  },
  "repository": "https://github.com/guardian/prosemirror-typerighter",
  "scripts": {
    "watch": "run-p watch:*",
    "watch:serve": "vite",
    "watch:typecheck": "tsc --noEmit --watch",
    "build": "vite build && tsc -p tsconfig.declaration.json",
    "doc": "typedoc --options ./build/typedoc.js ./src/ts/index.ts",
    "preview": "vite preview",
    "test": "jest --env=jsdom",
    "test:watch": "jest --env=jsdom --watch",
    "coverage": "jest --env=jsdom --coverage",
    "report-coverage": "jest --env=jsdom --coverage --coverageReporters=text-lcov | coveralls",
    "prepublishOnly": "npm run build",
    "format": "prettier --write './src/**/*.ts'",
    "publish-pages": "git subtree push --prefix pages/dist origin gh-pages",
    "yalc": "npm run build && yalc push"
  },
  "devDependencies": {
    "@emotion/babel-plugin": "^11.9.2",
    "@testing-library/dom": "^7.23.0",
    "@types/diff": "^4.0.2",
    "@types/fetch-mock": "^7.3.3",
    "@types/jest": "^23.3.2",
    "@types/lodash": "^4.14.116",
    "@types/prosemirror-history": "^1.0.1",
    "@types/prosemirror-keymap": "^1.0.1",
    "@types/prosemirror-model": "^1.5.0",
    "@types/prosemirror-schema-basic": "^1.0.1",
    "@types/prosemirror-schema-list": "^1.0.1",
    "@types/prosemirror-state": "1.2.7",
    "@types/prosemirror-view": "^1.3.0",
    "@types/react": "^17.0.19",
    "@types/react-dom": "^17.0.9",
    "@types/uuid": "^3.4.4",
    "@vitejs/plugin-react": "^1.3.2",
    "coveralls": "^3.0.2",
    "eslint": "^4.13.1",
    "fetch-mock": "^7.3.3",
    "git-cz": "^4.7.1",
    "jest": "^23.6.0",
    "node-fetch": "^2.2.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.9.2",
    "sass": "^1.53.0",
    "ts-jest": "^23.10.3",
    "tslib": "^1.9.3",
    "tslint": "5.10",
    "tslint-config-prettier": "^1.17.0",
    "typedoc": "^0.17.0",
    "typedoc-plugin-markdown": "^2.4.0",
    "typescript": "^4.7.4",
    "vite": "^2.9.13",
    "whatwg-fetch": "^3.0.0"
  },
  "dependencies": {
    "@emotion/react": "^11.4.1",
    "@emotion/styled": "^11.9.3",
    "@guardian/src-foundations": "^3.0.1",
    "@guardian/src-icons": "^3.13.0",
    "@guardian/user-telemetry-client": "^1.0.1",
    "@mui/icons-material": "^5.8.4",
    "@mui/material": "^5.9.0",
    "@popperjs/core": "^2.4.4",
    "diff": "^4.0.2",
    "lodash": "^4.17.11",
    "prosemirror-changeset": "^2.1.2",
    "prosemirror-example-setup": "^1.1.2",
    "prosemirror-history": "^1.1.2",
    "prosemirror-keymap": "^1.0.0",
    "prosemirror-menu": "^1.1.1",
    "prosemirror-model": "^1.8.2",
    "prosemirror-schema-basic": "^1.1.2",
    "prosemirror-state": "^1.3.4",
    "prosemirror-test-builder": "^1.0.1",
    "prosemirror-utils": "^0.6.7",
    "prosemirror-view": "^1.13.4",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-popper": "^2.2.5",
    "snarkdown": "^1.2.2",
    "uuid": "^8.3.0"
  }
}
