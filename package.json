{
  "name": "@guardian/prosemirror-typerighter",
  "version": "0.7.0",
  "description": "A plugin to represent validation ranges in Prosemirror",
  "main": "dist/index.js",
  "module": "dist/index.m.js",
  "types": "dist/src/ts/index.d.ts",
  "license": "MIT",
  "author": {
    "name": "Jonathon Herbert",
    "email": "jonathon.herbert@guardian.co.uk"
  },
  "repository": "https://github.com/guardian/prosemirror-typerighter",
  "scripts": {
    "test": "jest --env=jsdom",
    "coverage": "jest --env=jsdom --coverage",
    "report-coverage": "jest --env=jsdom --coverage --coverageReporters=text-lcov | coveralls",
    "pages": "npm run build && http-server ./pages/dist",
    "prepublishOnly": "npm run build && tsc -p tsconfig.declaration.json",
    "build": "rollup -c",
    "watch": "rollup -c -w & http-server -p 5000 ./pages/dist",
    "format": "prettier --write './src/**/*.ts'",
    "publish-pages": "git subtree push --prefix pages/dist origin gh-pages",
    "build:doc": "typedoc --options ./build/typedoc.js ./src/ts/index.ts"
  },
  "devDependencies": {
    "@babel/core": "^7.2.0",
    "@babel/preset-env": "^7.2.0",
    "@rollup/plugin-typescript": "^4.1.2",
    "@types/fetch-mock": "^6.0.4",
    "@types/jest": "^23.3.2",
    "@types/lodash": "^4.14.116",
    "@types/prosemirror-history": "^1.0.1",
    "@types/prosemirror-keymap": "^1.0.1",
    "@types/prosemirror-model": "^1.5.0",
    "@types/prosemirror-schema-basic": "^1.0.1",
    "@types/prosemirror-schema-list": "^1.0.1",
    "@types/prosemirror-state": "^1.2.0",
    "@types/prosemirror-view": "^1.3.0",
    "@types/uuid": "^3.4.4",
    "babel-core": "^7.0.0-0",
    "babel-jest": "^23.6.0",
    "coveralls": "^3.0.2",
    "eslint": "^4.13.1",
    "fetch-mock": "^7.2.5",
    "http-server": "^0.10.0",
    "jest": "^23.6.0",
    "node-fetch": "^2.2.1",
    "prettier": "^1.9.2",
    "prosemirror-example-setup": "^1.1.2",
    "prosemirror-history": "^1.1.2",
    "prosemirror-keymap": "^1.0.0",
    "prosemirror-menu": "^1.1.1",
    "prosemirror-model": "^1.8.2",
    "prosemirror-schema-basic": "^1.1.2",
    "prosemirror-state": "^1.3.2",
    "prosemirror-test-builder": "^1.0.1",
    "prosemirror-view": "^1.13.4",
    "rollup": "^2.11.2",
    "rollup-plugin-commonjs": "^8.2.6",
    "rollup-plugin-node-resolve": "^3.4.0",
    "rollup-plugin-scss": "^2.5.0",
    "rollup-plugin-tslint": "^0.1.38",
    "ts-jest": "^23.10.3",
    "tslib": "^1.9.3",
    "tslint": "5.10",
    "tslint-config-prettier": "^1.17.0",
    "typedoc": "^0.17.0-3",
    "typedoc-plugin-markdown": "^2.4.0",
    "typescript": "^3.9.3",
    "whatwg-fetch": "^3.0.0"
  },
  "dependencies": {
    "@rollup/plugin-babel": "^5.0.2",
    "lodash": "^4.17.11",
    "preact": "^10.0.0-rc.0",
    "prosemirror-tables": "^0.7.8",
    "prosemirror-utils": "^0.6.7",
    "uuid": "^3.3.2"
  }
}
