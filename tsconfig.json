{
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "ES2015",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "strict": true,
    "target": "es6",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "jsx": "preserve",
    "lib": ["dom", "esnext"]
  },
  "exclude": ["dist"]
}
